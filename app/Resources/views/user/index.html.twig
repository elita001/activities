{% extends 'base.html.twig' %}

{% block body %}
    {% include 'common/header.html.twig' %}
    <div class="content">
        <h1 class="content-header">Личный кабинет</h1>
        <p>Добро пожаловать, {{ user.email }}</p>
        <form action="{{ path('orders_list') }}">
            <p>
                <input type="submit" value="Список мероприятий">
            </p>
        </form>
        <form action="{{ path('orders_list', { 'type': 'participate' }) }}">
            <p>
                <input type="submit" value="Принятые мной мероприятия">
            </p>
        </form>
        <form action="{{ path('orders_list', { 'type': 'created' }) }}">
            <p>
                <input type="submit" value="Созданные мной мероприятия">
            </p>
        </form>
        <form action="{{ path('order_create') }}">
            <p>
                <input type="submit" value="Добавить мероприятие">
            </p>
        </form>
    </div>
    {% include 'common/footer.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {% include 'common/css.html.twig' %}
{% endblock %}