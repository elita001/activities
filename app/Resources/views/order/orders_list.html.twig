{% extends 'base.html.twig' %}

{% block body %}
    {% include 'common/header.html.twig' %}
    <div class="content">
        <h1 class="content-header">Список мероприятий</h1>
        <table>
            <tr>
               <th>Название</th>
               <th>Описание</th>
               <th>Телефон</th>
               <th></th>
            </tr>
        {% for item in orders %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.content }}</td>
                <td>{{ item.phone }}</td>
                <td>
                    <form action="{{  path('order_participate', { 'id': item.id }) }}" method="post">
                        <input type="submit" value="Пойти">
                    </form>
                </td>
            </tr>
        {% endfor %}
        </table>
    </div>
    {% include 'common/footer.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {% include 'common/css.html.twig' %}
{% endblock %}